<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:context="http://www.springframework.org/schema/context"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                      http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

  <context:annotation-config />

  <!-- SERVICES AND BUILDERS -->

  <!-- Inject our domain profiles -->
  <bean id="enableDomainProfiles"
    class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
    <property name="targetObject" ref="domainProfileStore" />
    <property name="targetMethod" value="setPrimaryDomainProfiles" />
    <property name="arguments">
      <list value-type="org.dataconservancy.packaging.tool.model.dprofile.DomainProfile">
        <ref bean="dcsBoProfile" />
        <ref bean="pcdmProfile" />
      </list>
    </property>
  </bean>
  
  <bean id="packageInitializer" class="org.dataconservancy.packaging.tool.integration.PackageInitializer" />
  
  <bean id="packager" class="org.dataconservancy.packaging.tool.integration.Packager" />
  
  <bean id="domainProfileServiceFactory" class="org.dataconservancy.packaging.tool.integration.DomainProfileServiceFactory" />

</beans>
